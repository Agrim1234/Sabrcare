<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="30dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LaunchActivity">

    <ImageView

        android:layout_margin="10dp"
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sabrcarelogo"/>

    <Button
        android:id="@+id/ButtonIntro"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_custom"
        android:textColor="#fff"
        android:padding="20dp"
        android:textSize="20sp"
        android:text="Learn how it works"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_below="@id/ButtonIntro"
        android:layout_width="wrap_content"
        android:id="@+id/LL1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/blueAccent"
            android:padding="10dp"
            android:text="Already a user?"/>

        <Button
            android:id="@+id/loginbtn"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="SIGN IN HERE"
            android:textColor="@color/blueAccent"
            android:textStyle="bold"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@drawable/sabrcarelogo2" />


</RelativeLayout>